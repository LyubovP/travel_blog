<p>Find me in app/views/blogs/_form.html.erb</p>
<%= form_for @blog do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
  
</div>
<div class="form-group">
  <%= f.label :content %>
  <%= f.text_area :content, class: 'form-control' %>
</div>

<%= f.submit "Create Post", class: 'btn btn-outline-success' %>
<%= link_to "Back", root_url, class: 'btn btn-outline-dark' %>
<% end %>